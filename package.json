{
  "scripts": {
    "sass": "sass --watch --no-source-map styles/scss:styles/css --style compressed",
    "react-sass": "sass --watch --no-source-map react/styles/scss:react/styles/css --style compressed",
    "dev": "concurrently \"yarn sass\" \"yarn react-sass\" \"vtex unlink && vtex link --clean\""
  },
  "dependencies": {
    "sass": "^1.72.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
